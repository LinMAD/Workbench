{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ car.make.name }} | {{ car.model.name }}
{% endblock %}

{% block body %}
    <h2>{{ car.make.name }} | {{ car.model.name }}</h2>
    <table class="table">
        <tr>
            <td>Price</td>
            <td>{{ car.price }}</td>
        </tr>
        <tr>
            <td>Year</td>
            <td>{{ car.year }}</td>
        </tr>
        <tr>
            <td>Navigation</td>
            <td>
            {% if car.navigation is defined %}
                <span>Yes</span>
            {% else %}
                <span>Nope</span>
            {% endif %}
            </td>
        </tr>
    </table>

    <blockquote>
        <p>{{ car.description }}</p>
    </blockquote>

    <a href="{{ url('offer') }}">Back</a>
{% endblock %}
